        if($captain->report_status == UserActiveTeamModel::TEAM_REPORT_STATUS_SUCCESS){
            return $this->formateResponse(1001,'已报名,不能进行修改');
        }

        $content = UserGameLogModel::content('',UserGameLogModel::LOG_SYSTEM_TYPE_KICK_TEAM);
